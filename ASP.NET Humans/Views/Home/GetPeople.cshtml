@model IEnumerable<Worker>;
@{
    ViewData["Title"] = "Get People Page";

}

<div class="text-center">

    <table>
        <tr>
            <td>
                <table>
                    <tr>
                        <td>Name</td>
                    </tr>

                    <tr>
                        <td>Sex</td>
                    </tr>

                    <tr>
                        <td>Age</td>
                    </tr>
                    <tr>
                        <td>Salary</td>
                    </tr>
                    <tr>

                        <td><img src="~/img/empty.png" alt=":D" width="200" height="200"></td>
                    </tr>
                </table>
            </td>
            @foreach (var mod in Model)
            {
                <td>
                    <table>
                        <tr>
                            <td>@mod.Name</td>
                        </tr>

                        <tr>
                            <td>@mod.Sex</td>
                        </tr>

                        <tr>
                            <td>@mod.Age</td>
                        </tr>

                        <tr>
                            <td>@mod.Salary</td>
                        </tr>

                        <tr>

                            @{
                                var path = ($"/Images/{Context.User.Identity.Name}/" + mod.Sex.ToString().ToLower() + "_" + mod.Name + ".jpg");
                            }
                            <td><img src="@path" alt="Can`t load image :D" width="200" height="200"></td>
                        </tr>

                        <tr>
                            <form method="post">
                            <td> <button asp-controller="Home" asp-action="GetPerson" , asp-route-name="@mod.Name" asp-route-age="@mod.Age" asp-route-salary="@mod.Salary" asp-route-sex="@mod.Sex"> Select</button> </td>
                            </form>

                        </tr>

                    </table>
                </td>
            }
        </tr>
    </table>
</div>