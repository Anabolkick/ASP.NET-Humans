@model ASP.NET_Humans.ViewModels.LoginViewModel
 <form method="post" asp-action="Login" id="LoginModalForm" role="form">
    <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Login</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div asp-validation-summary="ModelOnly"></div>
                    <div>
                        <label asp-for="Email_Login"></label><br />
                        <input asp-for="Email_Login" />
                        <span asp-validation-for="Email_Login"></span>
                    </div>
                    <div>
                        <label asp-for="Password"></label><br />
                        <input asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div>
                        <label asp-for="IsRemember"></label><br />
                        <input asp-for="IsRemember" />
                    </div>
                    <div>
                        <input id="login-btn" type="submit" value="Login" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>
