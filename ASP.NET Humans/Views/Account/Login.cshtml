@model ASP.NET_Humans.ViewModels.LoginViewModel

<h2>Sign In Form</h2>    

<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model?.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email_Login"></label><br />
        <input asp-for="Email_Login" />
        <span asp-validation-for="Email_Login"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="IsRemember"></label><br />
        <input asp-for="IsRemember" />
    </div>
    <div>
        <input type="submit" value="Login" />
    </div>
</form>